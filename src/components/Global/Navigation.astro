<nav
  class="
    bg-white
    flex
    items-center
    justify-evenly
    w-screen
    h-20
    fixed
    lg:px-0
    px-6
    lg:border-0
    border border-gray-200
    lg:shadow-none
    shadow-lg
    z-50
  "
>
  <a href="https://devprotocol.xyz" class="text-gray-900">
    <img src="/assets/logo.png" alt="DevProtocol" class="max-h-8" />
  </a>
  <main
    class="md:block flex flex-col md:text-base text-sm min-w-0 nav-responsive"
    id="nav"
  >
    <a
      href="https://docs.devprotocol.xyz/en/stakes-social/onboard-guide/"
      class="mx-4 text-lg font-display lg:font-mono overflow-ellipsis overflow-hidden hover:underline"
      >for Creators</a
    >
    <a
      href="https://docs.devprotocol.xyz/en/stakes-social/how-to-stake/"
      class="mx-4 text-lg font-display lg:font-mono overflow-ellipsis overflow-hidden hover:underline"
      >for Patrons</a
    >
    <a
